{% extends 'layouts/dashboard_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/medium-editor@latest/dist/css/medium-editor.min.css"
          type="text/css" media="screen" charset="utf-8">
{% endblock %}

{% block page_content %}
    <main id="dashboard" class="mt-5 pt-md-5 mb-5">
        <div class="container mt-5 pt-5 px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-xl-8">
                    <form method="post" id="comments-form">
                        <div class="form-floating mb-4">
                            <input class="form-control"
                                   id="title"
                                   name="post[title]"
                                   type="text"
                                   placeholder="Titre"
                                   required
                            />
                            <label for="title">Titre</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input class="form-control" id="excerpt" name="post[excerpt]" type="text"
                                   placeholder="Résumé"
                                   required/>
                            <label for="excerpt">Résumé</label>
                        </div>

                        <div class=" mb-4">
                            <label for="name" class="text-muted">Image mise en avant</label>
                            <input class="form-control" id="image" type="file" name="post[image]" required/>
                        </div>

                        <label for="comment[content]" class="text-muted">Contenu de l'article</label>
                        <div id="editor">
                            <textarea
                                    class="form-control editable"
                                    placeholder="Votre commentaire"
                                    id="comment[content]"
                                    required>
                            </textarea>
                        </div>

                        <button class="mt-4 btn btn-primary" id="submitButton" type="submit">Ajouter</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdn.jsdelivr.net/npm/medium-editor@latest/dist/js/medium-editor.min.js"></script>
    <script defer>
        document.addEventListener('DOMContentLoaded', () => {
            const editor = new MediumEditor('.editable');
        })
    </script>
{% endblock %}
