{
  "name": "anthocnt/anthony-cecconato_5_18102021",
  "description": "MVC Blog built for the PHP/Symfony training of Openclassrooms",
  "type": "project",
  "require": {
    "symfony/dotenv": "^5.3",
    "php": ">=8.0",
    "symfony/http-foundation": "^5.3"
  },
  "autoload": {
    "psr-4": {
      "Blog\\": "src/"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse --level=max src/",
    "phpmd": "phpmd src/ text codesize cleancode design naming unused controversial",
    "phpcs": "phpcs --standard=PSR12 src/",
    "phpcpd": "phpcpd src/",
    "tests": "phpunit tests",
    "serve": "php -S localhost:8001 -t public/",
    "ci": [
      "@phpstan",
      "@phpmd",
      "@phpcs",
      "@phpcpd",
      "@tests"
    ]
  },
  "authors": [
    {
      "name": "Anthony Cecconato",
      "email": "contact@anthony-cecconato.fr"
    }
  ],
  "require-dev": {
    "sebastian/phpcpd": "^6.0",
    "phpmd/phpmd": "^2.10",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6",
    "symfony/var-dumper": "^5.3",
    "phpstan/phpstan": "^1.1"
  }
}
